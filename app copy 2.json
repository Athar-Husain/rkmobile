{
    "expo": {
        "name": "RK Electronics",
        "slug": "rk-electronics",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.rkelectronics.app",
            "googleServicesFile": "./GoogleService-Info.plist",
            "infoPlist": {
                "NSCameraUsageDescription": "RK Electronics needs access to your camera to scan coupon QR codes and take photos for support tickets.",
                "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to attach photos and videos to your support ticket.",
                "UIBackgroundModes": ["remote-notification"]
            },
            "entitlements": {
                "aps-environment": "production"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#335EF7"
            },
            "permissions": [
                "android.permission.READ_EXTERNAL_STORAGE",
                "android.permission.WRITE_EXTERNAL_STORAGE",
                "android.permission.CAMERA",
                "android.permission.POST_NOTIFICATIONS",
                "android.permission.ACCESS_NOTIFICATION_POLICY"
            ],
            "package": "com.rkelectronics.app",
            "googleServicesFile": "./google-services.json"
        },
        "web": {
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you upload media for your support ticket."
                }
            ],
            "@react-native-firebase/app",
            "@react-native-firebase/messaging",
            [
                "react-native-vision-camera",
                {
                    "cameraPermissionText": "RK Electronics needs access to your camera to scan coupon QR codes.",
                    "enableCodeScanner": true,
                    "enableMicrophonePermission": false
                }
            ],
            [
                "expo-build-properties",
                {
                    "ios": {
                        "useFrameworks": "static"
                    },
                    "android": {
                        "compileSdkVersion": 34,
                        "targetSdkVersion": 34,
                        "minSdkVersion": 23
                    }
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "c7786c41-ddytfyuguihijoiuiyuftyfuyguihiojoiogiyftdyfygu2-6c3915b62196"
            }
        },
        "owner": "expouser1010"
    }
}
